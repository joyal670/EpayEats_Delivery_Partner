                            <ImageView
                                android:id="@+id/sample_alt_phone_btn"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="50dp"
                                android:padding="5dp"
                                android:src="@drawable/callblue"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/spacing_xlarge"
